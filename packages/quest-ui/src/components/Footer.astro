---
const { siteName } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="footer footer-center lg:footer bg-base-200 text-base-content p-10">
  <div class="lg:grid-flow-col lg:items-start lg:text-left w-full max-w-6xl mx-auto">
    {/* About section */}
    <nav class="lg:place-self-start">
      <h6 class="footer-title">About {siteName}</h6>
      <p class="max-w-xs text-sm opacity-80">
        Professional insights and analysis for industry professionals. Stay informed with our comprehensive coverage.
      </p>
    </nav>

    {/* Quick Links */}
    <nav class="lg:place-self-center">
      <h6 class="footer-title">Quick Links</h6>
      <a href="/" class="link link-hover">Home</a>
      <a href="/articles" class="link link-hover">Articles</a>
      <a href="/about" class="link link-hover">About</a>
    </nav>

    {/* Resources */}
    <nav class="lg:place-self-center">
      <h6 class="footer-title">Resources</h6>
      <a href="/privacy" class="link link-hover">Privacy Policy</a>
      <a href="/terms" class="link link-hover">Terms of Service</a>
      <a href="/contact" class="link link-hover">Contact</a>
    </nav>

    {/* Newsletter */}
    <nav class="lg:place-self-end">
      <h6 class="footer-title">Stay Updated</h6>
      <div class="form-control w-full max-w-xs">
        <label class="label">
          <span class="label-text text-sm">Enter your email</span>
        </label>
        <div class="join">
          <input
            type="email"
            placeholder="your@email.com"
            class="input input-bordered join-item w-full"
            aria-label="Email address for newsletter"
          />
          <button class="btn btn-primary join-item" aria-label="Subscribe to newsletter">
            Subscribe
          </button>
        </div>
      </div>
    </nav>
  </div>

  {/* Social icons */}
  <nav class="mt-8">
    <div class="grid grid-flow-col gap-4">
      <a
        href="#"
        class="btn btn-ghost btn-circle"
        aria-label="Twitter"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          class="fill-current"
        >
          <path

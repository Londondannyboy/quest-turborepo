---
// What We Cover Section Component - Generic & Reusable
const { topics, heading, subheading, ctaText, ctaLink } = Astro.props;

// Default generic topics - should be overridden per site
const defaultTopics = [
  {
    title: 'Expert Profiles',
    description: 'In-depth profiles of leading professionals and organizations in the industry.',
    icon: 'users',
  },
  {
    title: 'Strategic Insights',
    description: 'Expert guidance and best practices to help you succeed in your goals.',
    icon: 'strategy',
  },
  {
    title: 'Market Intelligence',
    description: 'Latest trends, analysis, and insights into the evolving industry landscape.',
    icon: 'analytics',
  },
  {
    title: 'Global Coverage',
    description: 'Comprehensive coverage across key markets and emerging regions worldwide.',
    icon: 'globe',
  },
];

const displayTopics = topics || defaultTopics;
const displayHeading = heading || 'What We Cover';
const displaySubheading = subheading || 'Everything you need to know about the industry';
const displayCtaText = ctaText || 'Explore All Content';
const displayCtaLink = ctaLink || '/articles';
---

<section class="py-16 lg:py-24 bg-white dark:bg-gray-900">
  <div class="mx-auto max-w-7xl px-4 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6">
        {displayHeading}
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        {displaySubheading}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      {displayTopics.map((topic, index) => (
        <div class={`group animate-fade-in-up animation-delay-${index * 100}`}>
          <div class="bg-gradient-to-br from-gray-50 to-white dark:from-gray-800 dark:to-gray-900 rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 border border-gray-200 dark:border-gray-700 h-full">
            {/* Icon */}
            <div class="mb-6">
              <div class="w-16 h-16 bg-primary/10 dark:bg-primary/20 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                {topic.icon === 'users' && (
                  <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"></path>
                  </svg>
                )}
                {topic.icon === 'strategy' && (
                  <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
                  </svg>
                )}
                {topic.icon === 'analytics' && (
                  <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path>
                  </svg>
                )}
                {topic.icon === 'globe' && (
                  <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4.332 8.027a6.012 6.012 0 011.912-2.706C6.512 5.73 6.974 6 7.5 6A1.5 1.5 0 019 7.5V8a2 2 0 004 0 2 2 0 011.523-1.943A5.977 5.977 0 0116 10c0 .34-.028.675-.083 1H15a2 2 0 00-2 2v2.197A5.973 5.973 0 0110 16v-2a2 2 0 00-2-2 2 2 0 01-2-2 2 2 0 00-1.668-1.973z" clip-rule="evenodd"></path>
                  </svg>
                )}
              </div>
            </div>

            {/* Content */}
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-primary transition-colors">
              {topic.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
              {topic.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    {/* CTA */}
    <div class="mt-16 text-center">
      <a href={displayCtaLink} class="inline-flex items-center gap-3 px-8 py-4 bg-primary text-white font-semibold rounded-xl hover:bg-primary/90 transition-all duration-300 shadow-lg hover:shadow-2xl transform hover:-translate-y-1">
        <span>{displayCtaText}</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

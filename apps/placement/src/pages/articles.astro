---
export const prerender = false;

import BaseLayout from '@quest/ui/layouts/base.astro';
import Header from '@quest/ui/components/Header.astro';
import Footer from '@quest/ui/components/Footer.astro';
import CategoryHero from '@quest/ui/components/CategoryHero.astro';
import ArticleCardGrid from '@quest/ui/components/ArticleCardGrid.astro';
import { initializeSql, getRecentArticles } from '@quest/db';

// Initialize Neon
const databaseUrl = import.meta.env.DATABASE_URL;
if (!databaseUrl) {
  throw new Error('DATABASE_URL environment variable is not set.');
}

initializeSql(databaseUrl);

// Get site info
const fullSiteName = import.meta.env.SITE_NAME || 'Placement Quest';
const siteName = (fullSiteName.split(' ')[0] || 'placement').toLowerCase();

// Fetch all articles (limit 50 for now, can add pagination later)
const articles = await getRecentArticles(siteName, 50);
---

<BaseLayout title={`Articles - ${fullSiteName}`} description={`Browse all articles on ${fullSiteName}`}>
  <!-- Header -->
  <Header siteName={fullSiteName} />

  <!-- Category Hero with Generated Banner -->
  <CategoryHero
    title="Latest Articles"
    description="Expert insights and analysis on private equity placement and fundraising"
    imageUrl="https://res.cloudinary.com/dc7btom12/image/upload/v1761192064/quest/placement/categories/articles-hero.png"
  />

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Article Count -->
    <div class="mb-8">
      <p class="text-gray-600 dark:text-gray-400 text-lg">
        <span class="font-semibold text-primary">{articles.length}</span> {articles.length === 1 ? 'article' : 'articles'} found
      </p>
    </div>

    {articles.length > 0 ? (
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {articles.map((article) => (
          <ArticleCardGrid article={article} />
        ))}
      </div>
    ) : (
      <div class="text-center py-16">
        <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">No Articles Yet</h2>
        <p class="text-gray-600 dark:text-gray-400">Check back soon for new content!</p>
      </div>
    )}
  </main>

  <!-- Footer -->
  <Footer siteName={fullSiteName} />
</BaseLayout>
